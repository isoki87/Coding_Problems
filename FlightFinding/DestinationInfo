package com.leo.flightfinder;

public class DestinationInfo {
	private String name;
	private double price;
	private double distance;
	private double time;
	
	DestinationInfo(String s, double d, double p, double t){
		this.name = s.toLowerCase();
		this.price = p;
		this.distance = d;
		this.time = t;
	}
	
	@Override
	public boolean equals(Object obj){
		try {
			if(this.getName().equals(((DestinationInfo) obj).getName()) && this.getPrice() == ((DestinationInfo) obj).getPrice() && this.getTime() == ((DestinationInfo) obj).getTime()){
				return true;
			}
		} catch (ClassCastException e){
			System.out.println("Wrong class in the equals method");
		}
		return false;
	}
	
	@Override
	public int hashCode(){
		return this.name.hashCode() * (int)this.price * (int)this.time * (int)this.distance;
	}
	
	public String getName(){
		return this.name;
	}
	
	public double getPrice(){
		return this.price;
	}
	
	public double getTime(){
		return this.time;
	}
}
